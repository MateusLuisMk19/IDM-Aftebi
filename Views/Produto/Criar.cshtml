@model ProdutoModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Edição de Produto";
    else
        ViewBag.Subtitulo = "Criação de Produto";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Criar" class="row">
    <input type="hidden" asp-for="@Model.IdProduto">
    <div class="form-group col-sm-8 col-lg-3">
        <label asp-for="@Model.Descricao">Descrição</label><br>
        <input asp-for="@Model.Descricao" class="form-control">
        <span asp-validation-for="@Model.Descricao" class="text-danger"></span><br>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-3 col-lg-2">
        <div class="w-100"></div>
        <label asp-for="@Model.Valor">Preço</label><br>
        <input asp-for="@Model.Valor" class="form-control col-lg-">
        <span asp-validation-for="@Model.Valor" class="text-danger"></span><br>
    </div>

    <div class="form-group col-3 col-lg-1">
        <div class="w-100"></div>
        <label asp-for="@Model.IdNivel">Nivel</label><br>
        <select asp-for="@Model.IdNivel" class="form-control"
            asp-items="@(IEnumerable<SelectListItem>)ViewBag.Niveis"></select>
        <span asp-validation-for="@Model.IdNivel" class="text-danger"></span><br>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-3">
        <label asp-for="@Model.IdFornecedor">Fornecedor</label><br>
        <select asp-for="@Model.IdFornecedor" class="form-control"
            asp-items="@(IEnumerable<SelectListItem>)ViewBag.Fornecedores"></select>
        <span asp-validation-for="@Model.IdFornecedor" class="text-danger"></span><br>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>