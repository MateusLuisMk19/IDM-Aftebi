@model EstoqueModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Edição de produto em Estoque";
    else
        ViewBag.Subtitulo = "Adição de produto em Estoque";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Criar" class="row">
    <input type="hidden" asp-for="@Model.IdEstoque">
    <div class="form-group col-sm-8 col-lg-3">
        <label asp-for="@Model.IdProduto">Produto</label><br>
        <select asp-for="@Model.IdProduto" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Produtos" ></select>
        <span asp-validation-for="@Model.IdProduto" class="text-danger"></span><br>

        <div class="w-100"></div>
        <label asp-for="@Model.Quantidade">Quantidade</label><br>
        <input asp-for="@Model.Quantidade" class="form-control" >
        <span asp-validation-for="@Model.Quantidade" class="text-danger"></span><br>
        <div class="w-100"></div>
        
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>