@model IEnumerable<EstoqueModel>
@{
    ViewBag.Subtitulo = "Stock";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        @if (User.IsInRole("administrador"))
        {
            <a asp-action="Criar" class="btn btn-primary">Adicionar Produto</a>
        }
    </div>
</header>
<hr>

<partial name="_Mensagem"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Entrada em</th>
                @if (User.IsInRole("administrador"))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var estoque in Model)
            {
                <tr>
                    <td>@estoque.Produto.Descricao</td>
                    <td>@estoque.Quantidade</td>
                    <td>@estoque.DtEntrada</td>
                    @if (User.IsInRole("administrador"))
                    {
                        <td>
                            <a asp-action="Criar" asp-route-id="@estoque.IdEstoque" class="btn btn-sm btn-secondary"><i
                        class="bi-pencil" title="Editar"></i></a>
                            <a asp-action="Excluir" asp-route-id="@estoque.IdEstoque" class="btn btn-sm btn-danger"><i
                        class="bi-trash" title="Excluir"></i></a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum item em estoque.</p>
}