@model NivelModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Edição de Nivel";
    else
        ViewBag.Subtitulo = "Criação de Nivel";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Criar" class="row">
    <input type="hidden" asp-for="@Model.IdNivel">
    <div class="form-group col-sm-8 col-lg-3">
        <label asp-for="@Model.Classificacao">Classificação</label><br>
        <input asp-for="@Model.Classificacao" class="form-control">
        <span asp-validation-for="@Model.Classificacao" class="text-danger"></span>

        <label asp-for="@Model.Descricao">Descrição</label><br>
        <input asp-for="@Model.Descricao" class="form-control">
        <span asp-validation-for="@Model.Descricao" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>