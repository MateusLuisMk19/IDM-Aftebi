@using App.Extensions
@inject UserManager<ColaboradorModel> _userManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Context.User.Identity.IsAuthenticated)
{
    var usuario = await _userManager.GetUserAsync(Context.User);
    <a asp-controller="usuario" asp-action="perfil" asp-route-id="@usuario.Id" class="nav-link text-black"><b>  @usuario.NomeCompleto.PrimeiraPalavra().ToUpper()</b></a>
    <a class="nav-link pe-0 navbar-dark botaoLog" asp-controller="Usuario" asp-action="Logout">Sair</a>
}
else
{
    <a class="nav-link pe-0 navbar-dark botaoLog" asp-controller="Usuario" asp-action="Login">Entrar</a>
}