@model RequisicaoModel
@{
    var word="";
    if (!User.IsInRole("administrador"))
    {
        ViewBag.Subtitulo = "Cancelar Requisição";
        word = "cancelar";
    }
    else
    {
        ViewBag.Subtitulo = "Excluir Requisição";
        word = "excluir";

    }
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<h4>Deseja realmente @word a requisição <span
        class="text-danger"><span>IDMRQ</span>@Model.IdRequisicao.ToString("D2")?</span></h4>

<form asp-action="Excluir" class="w-25">
    <input type="hidden" asp-for="@Model.IdRequisicao">
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-success">Não</a>
        <button class="btn btn-danger" type="submit">Sim</button>
    </div>
</form>