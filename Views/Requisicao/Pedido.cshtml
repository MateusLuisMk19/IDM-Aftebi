@model IEnumerable<RequisicaoModel>
@using App.Extensions
@using System.Globalization
@{
    ViewBag.Subtitulo = "Requisições Pendentes";
    RequisicaoModel REQ = Model.FirstOrDefault(x => x.EstadoReq == Estado.Pendente);
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
</header>
<hr>

<partial name="_Mensagem"></partial>

@if (Model.Count() > 0 || REQ != null)
{
    <table class="table table-striped tabela">
        <thead>
            <tr>
                <th>Nº ReQ</th>
                <th>Data/Hora de Requisição</th>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Utilizador</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var requisicao in Model)
            {
                @if (requisicao.EstadoReq == Estado.Pendente)
                {
                    <tr>
                        <td>@("IDMRQ" + requisicao.IdRequisicao.ToString("D2"))</td>
                        <td>@requisicao.DataRequisicao</td>
                        <td>@requisicao.ProdutoName.ResumoName()</td>
                        <td>@requisicao.Quantidade</td>
                        <td>@requisicao.ValorTotal.ToString("C2", CultureInfo.CreateSpecificCulture("pt-PT"))</td>
                        <td>
                            <b>
                                <a asp-action="Index" asp-route-id="@requisicao.IdColaborador"
                                class="text-decoration-none">@requisicao.ColabName</a>
                            </b>
                        </td>

                        <td>
                            <a asp-action="Detalhes" asp-route-id="@requisicao.IdRequisicao" class="btn btn-sm btn-primary"><i
                        class="bi bi-card-text" title="Detalhes"></i></a>
                            <a asp-action="Aprovar" asp-route-id="@requisicao.IdRequisicao" class="btn btn-sm btn-success"><i
                        class="bi-check" title="Aprovar"></i></a>
                            <a asp-action="Rejeitar" asp-route-id="@requisicao.IdRequisicao" class="btn btn-sm btn-danger"><i
                        class="bi-x" title="Rejeitar"></i></a>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhuma requisição.</p>
}