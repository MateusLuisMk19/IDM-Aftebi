@model RequisicaoModel

@inject UserManager<ColaboradorModel> _userManager
@{
    var usuario = await _userManager.GetUserAsync(Context.User);
    
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Edição de Requisição";
    else
    {
        ViewBag.Subtitulo = "Criação de Requisição";
    }

    var idR = Model.IdRequisicao;
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Criar" class="row">
    <input type="hidden" asp-for="@Model.IdRequisicao">
    <div class="w-100"></div>
    <div class="form-group col-3 visually-hidden">
        <div class="w-100"></div>
        <label asp-for="@Model.IdColaborador">ColaboradorId</label><br>
        <input asp-for="@Model.IdColaborador" value="@usuario.Id" class="form-control col-lg-">
        <span asp-validation-for="@Model.IdColaborador" class="text-danger"></span><br>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-3">
        <div class="w-100"></div>
        <label asp-for="@Model.IdProduto">Produto</label><br>
        <select asp-for="@Model.IdProduto" class="form-control"
            asp-items="@(IEnumerable<SelectListItem>)ViewBag.Produto"></select>
        <span asp-validation-for="@Model.IdProduto" class="text-danger"></span><br>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-3 col-lg-1">
        <div class="w-100"></div>
        <label asp-for="@Model.Quantidade">Quantidade</label><br>
        <input asp-for="@Model.Quantidade" class="form-control col-lg-">
        <span asp-validation-for="@Model.Quantidade" class="text-danger"></span><br>
    </div>

