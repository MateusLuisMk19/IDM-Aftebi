@model IEnumerable<FornecedorModel>
@{
    ViewBag.Subtitulo = "Fornecedores";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Criar" class="btn btn-primary">Novo Fornecedor</a>
    </div>
</header>
<hr>

<partial name="_Mensagem"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Endereco</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fornecedor in Model)
            {
                <tr>
                    <td>@fornecedor.Nome</td>
                    <td>@fornecedor.Email</td>
                    <td>@fornecedor.Telefone</td>
                    <td>@fornecedor.Endereco</td>
                    <td>
                        <a asp-action="Criar" asp-route-id="@fornecedor.IdFornecedor"
                    class="btn btn-sm btn-secondary"><i
                        class="bi-pencil" title="Editar"></i></a>
                        @* <a asp-action="Detalhes" asp-route-id="@fornecedor.IdFornecedor" class="btn btn-sm btn-secondary">Detalhes</a>*@
                        <a asp-action="Excluir" asp-route-id="@fornecedor.IdFornecedor" class="btn btn-sm btn-danger"><i class="bi-trash" title="Excluir"></i></a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum fornecedor.</p>
}